# AI Voice Sales Agent - Environment Configuration

# ==================================================
# Zoho CRM Configuration
# ==================================================
ZOHO_CLIENT_ID=your_client_id_here
ZOHO_CLIENT_SECRET=your_client_secret_here
ZOHO_REFRESH_TOKEN=your_refresh_token_here
ZOHO_REDIRECT_URI=https://your-domain.com/oauth/callback
ZOHO_DC=com  # Data center: com, eu, in, au, jp

# ==================================================
# Twilio Voice Configuration
# ==================================================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
WEBHOOK_BASE_URL=https://your-domain.com

# ==================================================
# OpenAI Configuration
# ==================================================
OPENAI_API_KEY=your_openai_api_key_here

# ==================================================
# Facebook Lead Ads Configuration
# ==================================================
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_VERIFY_TOKEN=ai_sales_agent_verify_2024

# ==================================================
# Flask Configuration
# ==================================================
FLASK_SECRET_KEY=your_super_secret_key_here
FLASK_ENV=production

# ==================================================
# Call Scheduling Configuration
# ==================================================
CALLING_HOURS_START=9   # 9 AM
CALLING_HOURS_END=19    # 7 PM
RETRY_DELAY_MINUTES=240 # 4 hours
CALL_INTERVAL_MINUTES=5 # 5 minutes between calls
MAX_CONCURRENT_CALLS=1  # Number of simultaneous calls

# ==================================================
# Logging Configuration
# ==================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
